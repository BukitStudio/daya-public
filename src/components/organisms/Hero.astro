---
import HeroImage from "../../assets/Daya-Hendaye-hero.jpg";
import { Picture } from "astro:assets";
import LogoDaya from "../atoms/LogoDaya.astro";
---

<div class="hero">
  <Picture
    src={HeroImage}
    alt="Daya Hendaye Hero Image"
    class="hero-image blur"
    width={1600}
    height={900}
    formats={["avif", "webp"]}
    layout="full-width"
    fit="cover"
    loading="eager"
    decoding="async"
    fetchpriority="high"
    quality={40}
  />

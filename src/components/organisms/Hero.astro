---
import HeroImage from "../../assets/Daya-Hendaye-hero.jpg";
import { Picture } from "astro:assets";
import LogoDaya from "../atoms/LogoDaya.astro";
---

<div class="hero">
  <Picture
    src={HeroImage}
    alt="Daya Hendaye Hero Image"
    width={1600}
    height={900}
    formats={["avif", "webp"]}
    layout="full-width"
    fit="cover"
    loading="eager"
    decoding="async"
    fetchpriority="high"
    quality={30}
    class="hero-image"
  />

  <div class="hero-overlay"></div>
  <div class="logo-container">
    <LogoDaya class="logo-daya" width="60%" />
  </div>
</div>

<style>
  .hero {
    width: 100%;
    height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: visible;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
    padding-left: 16px;
    padding-right: 16px;
  }



  .hero picture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    object-position: 60% 10%;
    object-fit: cover;
    display: block;
    transition: filter 0.15s linear;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(5, 25, 26, 0.9);
    pointer-events: none;
    z-index: 0;
  }
  .logo-container {
    position: absolute;

    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateY(-60px);
  }


  @media screen and (max-width: 768px) {
    .hero {
      height: 90vh;
    }

  .logo-container {
   
    transform: translateY(-120px);
  }


  }


</style>

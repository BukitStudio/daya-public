  <div class="hero-overlay"></div>
  <div class="logo-container">
    <LogoDaya class="logo-daya" width="80%" />
  </div>
</div>

<style>
  .hero {
    width: 100%;
    height: 75vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
  
  }

  .hero picture {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-position: 60% 10%;
    object-fit: cover;
    display: block;
    transition: filter 1s cubic-bezier(.4,0,.2,1);
  }
  /* .hero-image.blur {
    filter: blur(24px) brightness(0.7);
  } */

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(5, 25, 26, 0.9);
    pointer-events: none;
    z-index: 1;
  }
  .logo-container {
    position: absolute;
    height: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
</style>

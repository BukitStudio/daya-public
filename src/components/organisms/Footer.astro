---
import LogoDayaType from "../atoms/LogoDayaType.astro";
import Info from "../../data/info.json";
---

<footer class="footer">
  <div class="footer-brand">
    <LogoDayaType width=200 class="mb1"  />

    <p>{Info.address}</p>
    <p class="neutral-500 center">  <span set:html={Info.operatingHours.replace(/\n/g, "<br />")} />
</p>


</div>
   
    <div class="footer-credits center">
     <p class="txt-s">&copy; {new Date().getFullYear()} Daya Hendaye - Tous droits réservés.</p> 

     
    <p class="">This page loaded in <strong><span id="load-time"></span> seconds</strong> and emitted just <strong> 0.095g of CO2</strong></p>

    <p class="txt-s mb0">Site éco conçu par <a href="https://soberstudio.dev/" target="_blank" rel="noopener noreferrer">Sober Studio</a></p>
    


  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background-color: var(--primary-700);
    z-index: 999;
  
    
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0rem;
    margin:auto;

    max-width: 40ch;
    padding: 6rem 1rem;
  }

.footer-credits {
  padding: 1rem 2rem;
  background-color: rgb(7, 29, 20);
}

</style>

<script is:inline>
window.addEventListener('DOMContentLoaded', function() {
  const t = (performance.now() / 1000).toFixed(2);
  const el = document.getElementById('load-time');
  if (el) el.textContent = t;
});
</script>

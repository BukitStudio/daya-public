---
import type { Product } from "../../data/productsSchema";
// @ts-ignore: vegan property is present in the updated schema
const { product } = Astro.props as { product: Product };
---

<article class="product-card">
  {product.image ? (
    <img
      src={product.image}
      alt={product.name}
      class="product-image"
      width="320"
      height="320"
      loading="lazy"
     
    />
  ) : (
    <div class="product-image product-image--placeholder" aria-label="No image available"></div>
  )}
  <div class="product-content">
    <h2 class="product-name">{product.name}</h2>
    {
      product.unitNumber ? (
        <div class="product-unit">x{product.unitNumber}</div>
      ) : null
    }
    {
      product.price !== undefined ? (
        <div class="product-price">{product.price} €</div>
      ) : null
    }
    {
      product.category ? (
        <div class="product-category">{product.category}</div>
      ) : null
    }
    {
      product.ingredients ? (
        <div class="product-ingredients"> {product.ingredients}</div>
      ) : null
    }
    {
      product.allergy ? (
        <div class="product-allergy">
          <strong>Allergènes:</strong> {product.allergy}
        </div>
      ) : null
    }
    {product.vegan ? <div class="product-vegan">{product.vegan}</div> : null}
  </div>
</article>

<style>
  .product-card {
 min-width: 280px;
  max-width: 320px;
  flex: 1 1 280px;
  display: flex;
  flex-direction: column;
  }
  .product-image {
    width: 100%;
    max-width: 320px;
    aspect-ratio: 1/1;
    height: auto;
    min-height: 0;
    border-radius: 1rem;
    object-fit: cover;
    background: #f8f8f8;
    display: block;
  }
  .product-image--placeholder {
    min-height: 320px;
    background: #f0f0f0;
    display: block;
  }
  .product-content {
    padding: 1rem;
  }
  .product-name {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
    font-weight: bold;
  }
  .product-unit,
  .product-price,
  .product-category,
  .product-ingredients,
  .product-allergy,
  .product-info,
  .product-vegan {
    margin-bottom: 0.3rem;
    font-size: 0.98rem;
  }
  .product-category {
    color: #2a7a6c;
    font-weight: 500;
  }
  .product-price {
    color: #c0392b;
    font-weight: bold;
  }
</style>
